#include<stdio.h>
int main(void)
{
	int a, b, c, d, e, num;
	
	printf("请输入一个三位数\n");
	scanf("%d", &num);
	a = num / 100;
	b = (num / 10) % 10;
	c = num % 10;
	d = a + b + c;
	if (a < b)
	{
		e = a; a = b; b = e;
	}
	if (a < c)
	{
		e = a; a = c; c = e;
	}
	if (b < c)
	{
		e = b; b = c; c = e;
	}
	e = a * 100 + b * 10 + c;
	printf("排列最大为:%d\n", e);
	if (e % d == 0)
	{
		printf("能整除，商为%d\n", e / d);
	}
	else
	{
		printf("不能整除，余数为%d\n", e % d);
	}
	return 0;
}
