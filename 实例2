#include<stdio.h>
int main(void)
{
	double s1, s2, s3, s4, s5;
	double n, i;

	s1 = 100000 * 0.1;
	s2 = s1 + 100000 * 0.075;
	s3 = s2 + 200000 * 0.05;
	s4 = s3 + 200000 * 0.03;
	s5 = s4 + 400000 * 0.015;
	printf("请输入你的利润：");
	scanf("%lf", &n);
	if (n < 100000)
	{
		i = n * 0.1;
	}
	else if (n <= 200000)
	{
		i = s1 + (n - 100000) * 0.075;
	}
	else if (n <= 400000)
	{
		i = s2 + (n - 200000) * 0.05;
	}
	else if (n <= 600000)
	{
		i = s3 + (n - 400000) * 0.03;

	}
	else if (n <= 1000000)
	{
		i = s4 + (n - 600000) * 0.015;

	}
	else
	{
		i = s5 + (n - 1000000) * 0.01;
	}
	printf("%lf", i);
	return 0;
}
